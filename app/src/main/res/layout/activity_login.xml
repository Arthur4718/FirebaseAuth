<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtUserEmail" android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/colorWhite"
            android:paddingLeft="20dp" android:hint="E-mail"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtUserPassword"
            android:background="@color/colorWhite"
            app:layout_constraintStart_toStartOf="@+id/edtUserEmail" app:layout_constraintEnd_toEndOf="@+id/edtUserEmail"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edtUserEmail" android:hint="Password"
            android:paddingLeft="20dp"/>
    <TextView
            android:text="Back to login page."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGobackToLogin"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSignIn"
            app:layout_constraintStart_toStartOf="@+id/btnSignIn" app:layout_constraintEnd_toEndOf="@+id/btnSignIn"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn" app:layout_constraintStart_toStartOf="@+id/edtUserPassword"
            app:layout_constraintEnd_toEndOf="@+id/edtUserPassword" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtUserPassword"/>
</android.support.constraint.ConstraintLayout>