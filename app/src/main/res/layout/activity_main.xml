<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:padding="16dp"
            android:background="@drawable/rouded_corner"
            android:id="@+id/edt_username" android:layout_marginTop="130dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="16dp"
            android:id="@+id/edt_userPassword"
            android:background="@drawable/rouded_corner"
            android:hint="Password"
            app:layout_constraintStart_toStartOf="@+id/edt_useremail" app:layout_constraintEnd_toEndOf="@+id/edt_useremail"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_useremail"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:padding="16dp"
            android:id="@+id/edt_useremail"
            android:background="@drawable/rouded_corner"
            app:layout_constraintStart_toStartOf="@+id/edt_username" app:layout_constraintEnd_toEndOf="@+id/edt_username"
            android:hint="Email " android:selectAllOnFocus="true" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_username"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:id="@+id/btnSignUp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_userPassword"
            app:layout_constraintStart_toStartOf="@+id/edt_userPassword"
            app:layout_constraintEnd_toEndOf="@+id/edt_userPassword" android:textColor="@color/colorWhite"/>
    <TextView
            android:text="Already have an account? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpenLogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUp" app:layout_constraintStart_toStartOf="@+id/btnSignUp"
            app:layout_constraintEnd_toEndOf="@+id/btnSignUp" android:textColor="@color/colorWhite"/>
</android.support.constraint.ConstraintLayout>